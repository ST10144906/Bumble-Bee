@model BumbleBeeWebApp.Models.FundingRequest
@{
    ViewData["Title"] = "Submit Funding Request";
    Layout = "_Layout";
}
<link rel="stylesheet" type="text/css" href="~/css/dashboard.css" />
<link rel="stylesheet" type="text/css" href="~/css/site.css" />

<div class="dashboard-header">
    <h1>Submit Funding Request</h1>
</div>

<div class="container dashboard-main">
    <form asp-action="Create" method="post">
        <div class="form-group">
            <label for="ProjectId">Select Project</label>
            <select asp-for="ProjectId" class="form-control" required>
                <option value="">--Select a Project--</option>
                @foreach (var project in ViewBag.Projects)
                {
                    <option value="@project.Id">@project.Name</option>
                }
            </select>
            <span asp-validation-for="ProjectId" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label for="Amount">Funding Amount</label>
            <input asp-for="Amount" class="form-control" type="number" step="0.01" required />
            <span asp-validation-for="Amount" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label for="Motivation">Motivation</label>
            <textarea asp-for="Motivation" class="form-control" rows="4" required></textarea>
            <span asp-validation-for="Motivation" class="text-danger"></span>
        </div>

        <div class="text-center">
            <button type="submit" class="btn">Submit Funding Request</button>
        </div>
    </form>
</div>
