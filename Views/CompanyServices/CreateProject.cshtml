@model BumbleBeeWebApp.Models.Project

@{
    ViewData["Title"] = "Submit Project Details";
    Layout = "_Layout";
}

<link rel="stylesheet" type="text/css" href="~/css/dashboard.css" />
<link rel="stylesheet" type="text/css" href="~/css/site.css" />

<div class="dashboard-header">
    <h1>Submit Project Details</h1>
</div>

<div class="container dashboard-main">
    <form asp-action="Create" method="post" enctype="multipart/form-data">
        <div class="form-group">
            <label for="ProjectName">Project Name</label>
            <input asp-for="ProjectName" class="form-control" required />
            <span asp-validation-for="ProjectName" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label for="Description">Project Description</label>
            <textarea asp-for="Description" class="form-control" required></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label for="MiscellaneousDocuments">Upload Miscellaneous Documents</label>
            <input type="file" id="MiscellaneousDocuments" name="MiscellaneousDocuments" class="form-control" />
        </div>

        <div class="text-center">
            <button type="submit" class="btn">Submit Project Details</button>
        </div>
    </form>
</div>
