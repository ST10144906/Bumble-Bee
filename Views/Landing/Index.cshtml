@{
    ViewBag.Title = "Bumble Bee Foundation";
}

<div class="jumbotron text-center bg-light py-5">
    <h1 class="display-4">Welcome to Bumble Bee Foundation</h1>
    <p class="lead">We strive to make the world a better place by supporting communities in need.</p>
    <a class="btn btn-primary btn-lg" href="#donate" role="button">Donate Now</a>
</div>

<section id="about" class="my-5">
    <div class="row">
        <div class="col-md-6">
            <h2>About Us</h2>
            <p>The Bumble Bee Foundation is dedicated to uplifting communities through sustainable projects and empowering individuals to lead better lives. We focus on education, health, and environmental sustainability in Africa.</p>
        </div>
        <div class="col-md-6">
            <img src="https://via.placeholder.com/500x300" class="img-fluid" alt="About Bumble Bee Foundation" />
        </div>
    </div>
</section>

<section id="projects" class="my-5">
    <h2 class="text-center">Our Projects</h2>
    <div class="row text-center">
        <div class="col-md-4">
            <h3>Education Program</h3>
            <p>We provide learning opportunities to underprivileged children, ensuring they have the tools to succeed in the future.</p>
        </div>
        <div class="col-md-4">
            <h3>Healthcare Support</h3>
            <p>Our healthcare initiatives focus on providing access to essential medical services for communities in need.</p>
        </div>
        <div class="col-md-4">
            <h3>Environmental Sustainability</h3>
            <p>We work to promote sustainable farming practices and environmental preservation in Africa.</p>
        </div>
    </div>
</section>

<section id="donate" class="my-5 bg-light py-4">
    <h2 class="text-center">Support Our Cause</h2>
    <p class="text-center">Your donations help us continue our work. Every contribution makes a difference!</p>
    <div class="text-center">
        <a class="btn btn-success btn-lg" href="#donate">Donate Now</a>
    </div>
</section>

<section id="contact" class="my-5">
    <h2>Contact Us</h2>
    <form>
        <div class="mb-3">
            <label for="name" class="form-label">Name</label>
            <input type="text" class="form-control" id="name" placeholder="Your Name" />
        </div>
        <div class="mb-3">
            <label for="email" class="form-label">Email address</label>
            <input type="email" class="form-control" id="email" placeholder="name@example.com" />
        </div>
        <div class="mb-3">
            <label for="message" class="form-label">Message</label>
            <textarea class="form-control" id="message" rows="3" placeholder="Your Message"></textarea>
        </div>
        <button type="submit" class="btn btn-primary">Send Message</button>
    </form>
</section>
