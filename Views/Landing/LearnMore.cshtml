@{
    Layout = "_Layout";
}

<!-- Hero Section -->
<div class="jumbotron text-center" style="background-color: var(--color-pastel-green);">
    <h1 class="display-4" style="color: var(--text);">Learn More About Bumblebee Foundation</h1>
    <p style="color: var(--text);">Explore more about our foundation and the impact we are creating.</p>
</div>

<!-- Information Cards Section -->
<div class="container my-5">
    <div class="row">
        <!-- Card 1: Donor -->
        <div class="col-md-6 mb-4">
            <div class="card" style="background-color: var(--color-pastel-green); border: none; height: 100%;">
                <div class="card-body" style="color: var(--text);">
                    <h5 class="card-title" style="color: var(--text); font-size: 1.5rem;">Mission</h5>
                    <p class="card-text" style="font-size: 1.1rem;">
                        This is where will put donor info
                    </p>
                </div>
            </div>
        </div>

        <!-- Card 2: Company -->
        <div class="col-md-6 mb-4">
            <div class="card" style="background-color: var(--color-pastel-green); border: none; height: 100%;">
                <div class="card-body" style="color: var(--text);">
                    <h5 class="card-title" style="color: var(--text); font-size: 1.5rem;">Vision</h5>
                    <p class="card-text" style="font-size: 1.1rem;">
                        This is where we will put company info
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>
