@model List<BumbleBeeWebApp.Models.User>

@{
    ViewBag.Title = "All Users";
}


<link rel="stylesheet" type="text/css" href="~/css/accounts.css" />


<h1 class="mb-4">All Users</h1>
<div class="text-end mb-3">
    <a href="/Account/RegisterAdmin" class="btn btn-light btn-lg">Add New Admin</a>
</div>

@if (Model != null && Model.Count > 0)
{
    <div class="table-responsive">
        <table class="table table-bordered table-striped">
            <thead class="thead-light">
                <tr>
                    <th>Full Name</th>
                    <th>Email</th>
                    <th>Role</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var user in Model)
                {
                    <tr>
                        <td>@user.FullName</td>
                        <td>@user.Email</td>
                        <td>@user.Role</td>
                        <td>
                            <a href="/AdminManager/DeleteAdmin/@user.UID" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you want to delete this user?');">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
else
{
    <p>No users found.</p>
}
