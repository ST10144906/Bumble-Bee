<link rel="stylesheet" type="text/css" href="~/css/admin.css" />

<!-- Dropdown Menu -->
<div class="row mt-3">
    <div class="admin-controls d-flex justify-content-center">
        <select id="adminFeaturesDropdown"
                class="form-select dropdown-enhanced text-center"
                style="max-width: 350px; margin-top: 20px; margin-bottom: 20px;">
            <option value="" disabled selected class="centered-option">Admin Features</option>
            <option value="LoadAdminUsers">Manage Administrator</option>
            <option value="LoadDonorUsers">Manage Donor Users</option>
            <option value="LoadTestimonials">Manage Testimonials</option>
            <option value="LoadCompanies">Manage Companies</option>
            <option value="ViewAllProjects">View All Projects</option>
        </select>
    </div>
</div>

<!-- Hidden Forms -->
<div style="display: none;">
    <form id="form-LoadAdminUsers" asp-action="LoadAdminUsers" asp-controller="AdminManager" method="get"></form>
    <form id="form-LoadDonorUsers" asp-action="LoadDonorUsers" asp-controller="AdminManager" method="get"></form>
    <form id="form-LoadTestimonials" asp-action="LoadTestimonials" asp-controller="AdminManager" method="get"></form>
    <form id="form-LoadCompanies" asp-action="LoadCompanies" asp-controller="AdminManager" method="get"></form>
    <form id="form-ViewAllProjects" asp-action="ViewAllProjects" asp-controller="DonorProject" method="get"></form>
</div>

<!-- JavaScript -->
<script>
    document.getElementById('adminFeaturesDropdown').addEventListener('change', function () {
        const selectedValue = this.value;
        if (selectedValue) {
            const form = document.getElementById(`form-${selectedValue}`);
            if (form) {
                form.submit();
            }
        }
    });
</script>
