@model BumbleBeeWebApp.Models.Project

<link rel="stylesheet" type="text/css" href="~/css/dashboard.css" />

<div class="dashboard-header">
    <h1>Bumblebee Foundation</h1>
    <p>Project Details</p>
</div>

<div class="container dashboard-main">
    <div class="project-details-container">
        <div class="project-card">
            <h2>@Model.ProjectName</h2>
            <p><strong>Description:</strong> @Model.Description</p>
            <p><strong>Status:</strong> @Model.Status</p>
            <p><strong>Date Created:</strong> @Model.DateCreated.ToString("yyyy-MM-dd")</p>

            @if (!string.IsNullOrEmpty(Model.MiscellaneousDocumentsUrl))
            {
                <p>
                    <strong>Miscellaneous Document:</strong>
                    <a href="@Model.MiscellaneousDocumentsUrl" target="_blank" class="btn btn-secondary">View Document</a>
                </p>
            }
            else
            {
                <p><strong>Miscellaneous Document:</strong> Not uploaded.</p>
            }
        </div>
    </div>

    <!-- Navigation or Actions -->
    <div class="text-center mt-5">
        <a class="btn" asp-controller="Dashboard" asp-action="Index">Back to Dashboard</a>
    </div>
</div>
