@{
    ViewData["Title"] = "Email Already Verified";
    Layout = "_Layout";
}

<link rel="stylesheet" type="text/css" href="~/css/accounts.css" />
<link rel="stylesheet" type="text/css" href="~/css/site.css" />

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card border-0 rounded shadow">
                <div class="card-body p-4">
                    <div class="row no-gutters align-items-center">
                        <div class="col-md-6">
                            <img src="https://via.placeholder.com/600x1000" class="card-img rounded-left" alt="Email Verified Image" style="object-fit: cover;">
                        </div>
                        <div class="col-md-6">
                            <div class="card-body text-center">
                                <h1 class="text-center mb-4">Email Already Verified</h1>
                                <p class="text-center mb-4">Your email address has been verified. Thank you for confirming your account.</p>
                                <div class="d-flex flex-column align-items-center">
                                    <a class="btn btn-light btn-lg mb-3" asp-area="" asp-controller="Account" asp-action="Login">Go to Login</a>
                                    <a class="btn btn-light btn-lg" asp-area="" asp-controller="Landing" asp-action="Home">Back Home</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
