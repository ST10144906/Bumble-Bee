@{
    ViewData["Title"] = "Register Admin";
    Layout = "_Layout";
}

<link rel="stylesheet" type="text/css" href="~/css/accounts.css" />

<div class="container my-5">
    @if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
    {
        <div class="alert alert-danger">
            @ViewBag.ErrorMessage
        </div>
    }

    <div class="row justify-content-center mb-4">
        <div class="col-md-8">
            <div class="card border-0 rounded shadow mb-4">
                <div class="card-body p-5">
                    <h1 class="text-center mb-5">Register Administrator</h1>
                    <form method="post" action="/Account/RegisterAdministrator">

                        <!-- Admin Details Section -->
                        <h3 class="text-center mb-4">Administrator Details</h3>
                        <div class="form-group mb-4">
                            <input type="email" id="userEmail" name="UserEmail" class="form-control mb-4" placeholder="Email" required>
                        </div>
                        <div class="form-group mb-4">
                            <input type="password" id="password" name="Password" class="form-control mb-4" placeholder="Password" required>
                        </div>
                        <div class="form-group mb-4">
                            <input type="password" id="confirmPassword" name="ConfirmPassword" class="form-control mb-4" placeholder="Confirm Password" required>
                        </div>
                        <div class="form-group mb-4">
                            <input type="text" id="fullName" name="FullName" class="form-control mb-4" placeholder="Full Name" required>
                        </div>

                        <div class="form-group mb-4">
                            <label for="userRole" class="form-label">Select Role</label>
                            <select id="userRole" name="UserRole" class="form-control mb-4" required>
                                <option value="" disabled selected>Select a role</option>
                                <option value="Admin">Admin</option>
                                <option value="Auditor">Auditor</option>
                            </select>
                        </div>

                        <div class="text-center mb-5">
                            <button type="submit" class="btn btn-light btn-lg">Add</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
