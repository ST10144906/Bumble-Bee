@{
    ViewData["Title"] = "Login Page";
    Layout = "_Layout";
}

<link rel="stylesheet" type="text/css" href="~/css/site.css" />
<link rel="stylesheet" type="text/css" href="~/css/accounts.css" />

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card border-0 rounded shadow">
                <div class="card-body p-4">
                    <div class="row no-gutters align-items-center">
                        <div class="col-md-6">
                            <img src="https://via.placeholder.com/600x1000" class="card-img rounded-left" alt="Login Image" style="object-fit: cover;">
                        </div>
                        <div class="col-md-6">
                            <div class="card-body">
                                <h1 class="text-center mb-4">Welcome Back</h1>
                                <p class="text-center mb-4">Please sign in to continue</p>
                                <form method="post" action="/Account/Login">
                                    <div class="form-group">
                                        <input type="text" id="email" name="email" class="form-control mb-3" placeholder="Email" required>
                                    </div>
                                    <div class="form-group">
                                        <input type="password" id="password" name="password" class="form-control mb-4" placeholder="Password" required>
                                    </div>
                                    <div class="text-center mb-4">
                                        <button type="submit" class="btn btn-light btn-lg" title="Click here to Sign In">Sign In</button>
                                    </div>
                                </form>

                                <div class="text-center my-4">
                                    <a href="/Account/Register" class="text">Don't have an account?</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@if (TempData["Message"] != null)
{
    <script>
        alert('@TempData["Message"]');
    </script>
}