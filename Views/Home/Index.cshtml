@{
    ViewData["Title"] = "Home Page";
    Layout = null;
}

<div style="display: flex; justify-content: center; align-items: center; height: 100vh; background-color: #e9ecef;">
    <div style="text-align: center; width: 100%; max-width: 600px; padding: 20px; border-radius: 15px; border: 1px solid #ced4da; background-color: #ffffff; box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);">
        <h2 style="margin-bottom: 20px;">Welcome to Bumble Bee Foundation</h2>
        <p style="margin-bottom: 30px;">Select a feature to trigger a Firebase action:</p>
        <form asp-controller="Home" asp-action="Index" method="post">
            <button type="submit" name="action" value="Authentication" style="display: block; margin: 10px auto; padding: 10px 20px; width: 200px; font-size: 16px;">Auth</button>
            <button type="submit" name="action" value="Firestore" style="display: block; margin: 10px auto; padding: 10px 20px; width: 200px; font-size: 16px;">Firestore</button>
            <button type="submit" name="action" value="Storage" style="display: block; margin: 10px auto; padding: 10px 20px; width: 200px; font-size: 16px;">Storage</button>
            <button type="submit" name="action" value="Functions" disabled style="display: block; margin: 10px auto; padding: 10px 20px; width: 200px; font-size: 16px; background-color: #ccc; cursor: not-allowed;">Functions (Coming Soon)</button>
        </form>
        @if (ViewData["Message"] != null)
        {
        <div style="margin-top: 20px; padding: 10px; background-color: #e9ecef; border-radius: 5px;">
            @ViewData["Message"]
        </div>
        }
    </div>
</div>
