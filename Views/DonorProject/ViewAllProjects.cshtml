@model List<BumbleBeeWebApp.Models.Project>

@{
    ViewBag.Title = "View All Projects";
}

<h1>All Projects</h1>

@if (Model != null && Model.Count > 0)
{
    <div class="project-container">
        @foreach (var project in Model)
        {
            <div class="project-card">
                <h3>@project.ProjectName</h3>
                <p class="project-description">@project.Description</p>
                <p><strong>Status:</strong> @project.Status</p>
                <p>
                    @if (!string.IsNullOrEmpty(project.MiscellaneousDocumentsUrl))
                    {
                        <a href="@project.MiscellaneousDocumentsUrl" target="_blank" class="btn">Download Document</a>
                    }
                    else
                    {
                        <span>No Documents</span>
                    }
                </p>
            </div>
        }
    </div>
}
else
{
    <p>@ViewBag.NoProjectsMessage ?? "No projects found." </p>
}
