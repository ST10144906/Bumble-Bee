@model List<BumbleBeeWebApp.Models.Project>

@{
    ViewBag.Title = "View All Projects";
}

<link rel="stylesheet" type="text/css" href="~/css/dashboard.css" />

<h1>All Projects</h1>

@if (Model != null && Model.Count > 0)
{
    <div class="project-container">
        @foreach (var project in Model)
        {
            <div class="project-card">
                <h4>@project.ProjectName</h4>
                <p>@project.Description</p>
                <p><strong>Date Created:</strong> @project.DateCreated.ToString("yyyy-MM-dd")</p>
                <a class="btn" asp-controller="Dashboard" asp-action="ProjectDetails" asp-route-projectId="@project.Id">View Details</a>
            </div>
        }
    </div>
}
else
{
    <p>@ViewBag.NoProjectsMessage ?? "No projects found." </p>
}
