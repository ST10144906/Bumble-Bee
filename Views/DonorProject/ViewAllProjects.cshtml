@model List<(string CompanyName, BumbleBeeWebApp.Models.Project Project)>

@{
    ViewBag.Title = "View All Projects";
}

<h1>All Projects</h1>

@if (Model != null && Model.Count > 0)
{
    <div class="project-container">
        @foreach (var entry in Model)
        {
            <div class="project-card">
                <h3>@entry.Project.ProjectName</h3>
                <p><strong>Created By:</strong> @entry.CompanyName</p>
                <p><strong>Date Created:</strong> @entry.Project.DateCreated.ToString("MMMM dd, yyyy")</p>
                <p class="project-description">@entry.Project.Description</p>

                <p>
                    @if (!string.IsNullOrEmpty(entry.Project.MiscellaneousDocumentsUrl))
                    {
                        <a href="@entry.Project.MiscellaneousDocumentsUrl" target="_blank" class="btn">Download Document</a>
                    }
                    else
                    {
                        <span>No Documents</span>
                    }
                </p>
            </div>
        }
    </div>
}
else
{
    <p>@ViewBag.NoProjectsMessage ?? "No projects found." </p>
}
