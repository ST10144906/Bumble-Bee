<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - BumbleBeeWebApp</title>
    <link href="~/Content/site.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/BumbleBeeWebApp.styles.css" asp-append-version="true" />
    <!-- Font Awesome CDN -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" />
    @if (ViewData["CssFile"] != null)
    {
        <link rel="stylesheet" href="~/css/@ViewData["CssFile"]" />
    }
</head>

<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse"
                        aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link text-dark nav-btn hover-color" asp-area="" asp-controller="Landing"
                               asp-action="Index">Home</a>
                        </li>
                    </ul>
                    <ul class="navbar-nav ml-auto">
                        <li class="nav-item">
                            <a class="nav-link text-dark nav-btn hover-color" asp-area="" asp-controller="Landing"
                               asp-action="LoginPage">Login</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark nav-btn hover-color" asp-area="" asp-controller="Landing"
                               asp-action="RegisterPage">Get Started</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <!-- Footer Section -->
    <footer class="bg-dark text-white py-4 mt-5">
        <div class="container">
            <div class="row">
                <!-- Branding Section (Left) -->
                <div class="col-md-4 text-start d-flex align-items-center">
                    <img src="https://via.placeholder.com/100x100" alt="Your Logo" class="img-fluid me-3" style="max-width: 200px;" />
                    <div>
                        <p>Some text here</p>
                    </div>
                </div>

                <!-- Social Media Links (Center) -->
                <div class="col-md-4 text-center">
                    <h5>Connect with us</h5>
                    <ul class="list-unstyled d-flex justify-content-center">
                        <li class="mx-3">
                            <a href="https://www.facebook.com" target="_blank" class="text-white">
                                <i class="fab fa-facebook fa-2x"></i>
                            </a>
                        </li>
                        <li class="mx-3">
                            <a href="https://www.twitter.com" target="_blank" class="text-white">
                                <i class="fab fa-twitter fa-2x"></i>
                            </a>
                        </li>
                        <li class="mx-3">
                            <a href="https://www.linkedin.com" target="_blank" class="text-white">
                                <i class="fab fa-linkedin fa-2x"></i>
                            </a>
                        </li>
                        <li class="mx-3">
                            <a href="https://www.instagram.com" class="text-white">
                                <i class="fab fa-instagram fa-2x"></i>
                            </a>
                        </li>
                        <li class="mx-3">
                            <a href="mailto:info@yourorganization.org" class="text-white">
                                <i class="fas fa-envelope fa-2x"></i>
                            </a>
                        </li>
                    </ul>
                </div>

            <hr class="my-3 border-light" />
                <p class="mb-0 text-center">&copy; 2024 Bumble Bee. All rights reserved.</p>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>
